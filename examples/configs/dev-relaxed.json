{
  "global": {
    "log_path": "dev-logs/tooling.log",
    "output_format": "text",
    "color_output": true,
    "verbosity": 2
  },
  "memory_checker": {
    "analyze_tests": false,
    "max_file_size": 52428800,
    "severity_levels": {
      "missing_defer": "warning",
      "missing_errdefer": "warning",
      "allocation_no_free": "warning",
      "ownership_transfer": "info"
    }
  },
  "testing_compliance": {
    "test_naming_strict": false,
    "test_file_prefix": "test_",
    "require_test_category": false
  },
  "logger": {
    "max_log_size_mb": 100,
    "max_archives": 20,
    "performance_warn_threshold_ms": 2000,
    "log_level": "debug",
    "include_timestamps": true,
    "archive_compression": "none"
  }
}